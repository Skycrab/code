<project default="compile">

  <property file="../../build.properties" />
  <import file="../../build-macros.xml" />

  <target name="init">
    <init />
  </target>

  <target name="clean">
    <clean />
  </target>

  <target name="generate" depends="init">
    <generate />
  </target>

  <target name="compile" depends="generate">
    <compile />
  </target>

  <target name="run" depends="compile">
    <echo message="Running tests in ${basedir}" />

    <echo message="Now >> t.cymbol" />
    <run class="Test" argline="t.cymbol" />

    <echo message="Now >> forward.cymbol" />
    <run class="Test" argline="forward.cymbol" />

    <echo message="Now >> global-forward.cymbol" />
    <run class="Test" argline="global-forward.cymbol" />

    <echo message="Now >> inherit.cymbol" />
    <run class="Test" argline="inherit.cymbol" />

    <echo message="Now >> local-forward.cymbol" />
    <run class="Test" argline="local-forward.cymbol" />

    <echo message="Now >> member.cymbol" />
    <run class="Test" argline="member.cymbol" />
  </target>

  <target name="run-single">
    <run-single />
  </target>
</project>